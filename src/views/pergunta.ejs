<!DOCTYPE html>
<html lang="pt-BR">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>

    <div class="container mt-2">
      <h1><%= foundQuestion.title %></h1>
      <p><%- foundQuestion.description %></p>
      <hr />
      <form
        action="/pergunta/<%- foundQuestion.id %>"
        method="POST"
        class="mb-3"
      >
        <h3>Responda</h3>
        <textarea
          name="body"
          placeholder="Digite sua resposta"
          class="form-control"
        ></textarea>
        <button class="btn btn-success mt-4">Enviar resposta</button>
      </form>

      <h3>Respostas</h3>
      <hr />
      <% answers.forEach(answer => { %>
      <div class="card mt-2">
        <div class="card-body">
          <p><%- answer.body %></p>
        </div>
      </div>
      <% }) %> <%- include('partials/scripts') %>
    </div>
  </body>
</html>
